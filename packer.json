{

  "variables": {
    "build_number": "{{ env `BUILD_NUMBER` }}",
    "code_dir": "/usr/src/app"
  },

  "builders": [{
    "type": "docker",
    "image": "node:9.9.0-alpine",
    "commit": "true",
    "run_command": [
      "-d",
      "-i",
      "-t",
      "{{.Image}}",
      "/bin/sh"
    ],
    "changes": [
      "WORKDIR {{ user `code_dir` }}",
      "EXPOSE 8080",
      "USER node",
      "CMD [\"npm\",\"start\"]"
    ]
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "mkdir -p {{ user `code_dir` }} && chown -R node:node {{ user `code_dir` }}"
      ]
    },
    {
      "type": "file",
      "source": "code/",
      "destination": "{{ user `code_dir` }}"
    }
  ],

    "post-processors": [
      [
        {
          "type": "docker-tag",
          "repository": "{{ user `docker_repository_prefix` }}/{{ user `ci_image_name` }}",
          "tag": "0.1.{{ user `build_number` }}"
        }
      ]
    ]
}
