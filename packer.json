{

  "variables": {
    "build_number": "{{ env `BUILD_NUMBER` }}"
  },

  "builders": [{
    "type": "docker",
    "image": "node:9.9.0-alpine",
    "commit": "true",
    "changes": [
      "WORKDIR /usr/src/app",
      "EXPOSE 8080",
      "USER node",
      "CMD [\"npm\",\"start\"]"
    ]
  }],

  "provisioners": [
    {
      "type": "file",
      "source": "index.js",
      "destination": "/usr/src/app/index.js"
    },
    {
      "type": "file",
      "source": "package.json",
      "destination": "/usr/src/app/package.json"
    },

    "post-processors": [
      [
        {
          "type": "docker-tag",
          "repository": "giorgioprevitera/dentsu_aegis_tech_test",
          "tag": "0.1.{{ user `build_number` }}"
        }
      ]
    ]
}
