{

  "variables": {
    "build_number": "{{ env `BUILD_NUMBER` }}"
  },

  "builders": [{
    "type": "docker",
    "image": "node:9.9.0-alpine",
    "commit": "true",
    "run_command": [
      "-d",
      "-i",
      "-t",
      "{{.Image}}",
      "/bin/sh"
    ],
    "changes": [
      "WORKDIR /usr/src/app",
      "EXPOSE 8080",
      "USER node",
      "CMD [\"npm\",\"start\"]"
    ]
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apk --no-cache add openssl",
        "wget http://github.com/aelsabbahy/goss/releases/download/v0.3.5/goss-linux-amd64 -O /usr/local/bin/goss",
        "chmod +x /usr/local/bin/goss"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mkdir -p /usr/src/app && chown -R node:node /usr/src/app",
        "mkdir /goss"
      ]
    },
    {
      "type": "file",
      "source": "code/",
      "destination": "/usr/src/app"
    },
    {
      "type": "file",
      "source": "tests/goss.yaml",
      "destination": "/goss/goss.yaml"
    }
  ],

    "post-processors": [
      [
        {
          "type": "docker-tag",
          "repository": "giorgioprevitera/dentsu_aegis_tech_test",
          "tag": "0.1.{{ user `build_number` }}"
        }
      ]
    ]
}
