{

  "variables": {
    "build_number": "{{ env `BUILD_NUMBER` }}"
  },

  "builders": [{
    "type": "docker",
    "image": "node:9.9.0-alpine",
    "commit": "true",
    "run_command": [
      "-d",
      "-i",
      "-t",
      "{{.Image}}",
      "/bin/sh"
    ],
    "changes": [
      "WORKDIR /usr/src/app",
      "EXPOSE 8080",
      "USER node",
      "CMD [\"npm\",\"start\"]"
    ]
  }],

  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir -p /usr/src/app && chown -R node:node /usr/src/app"]
    },
    {
      "type": "file",
      "source": "code/",
      "destination": "/usr/src/app"
    }
  ],

    "post-processors": [
      [
        {
          "type": "docker-tag",
          "repository": "giorgioprevitera/dentsu_aegis_tech_test",
          "tag": "0.1.{{ user `build_number` }}"
        }
      ]
    ]
}
